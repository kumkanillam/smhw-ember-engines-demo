<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#power-select
        selected=destination
        options=cities
        onchange=(action (mut destination))
        allowClear=true
        placeholder='Select a location...'
        as |name|}}
          {{name}}
      {{/power-select}}
      <div class="boxes-list boxes-list-vertical">
        {{#each model as |student|}}
          <div class="boxes-list-item blue-box">
            <header><strong>{{student.name}}</strong></header>
            {{#link-to 'student' student}}
              See homeworks
            {{/link-to}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
